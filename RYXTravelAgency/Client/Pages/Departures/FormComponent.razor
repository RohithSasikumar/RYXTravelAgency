<EditForm Model="@departure" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">


        <label> Location: </label>

        <div>

            <InputText @bind-Value="@departure.Depart_Location" class="form-control" />
            <ValidationMessage For="@(() => departure.Depart_Location)" />

        </div>

    </div>

    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">@ButtonText</button>
    }

    <BackToList Target="departures" />

</EditForm>

@code {
    [Parameter] public Departure departure { get; set; }
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
